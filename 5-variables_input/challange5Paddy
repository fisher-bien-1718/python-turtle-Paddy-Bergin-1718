from turtle import*
print("Square=1 Triangle=2 Circle=3")
shape = int(input("what shape do you want?"))
if shape == 1:
    print("I can draw that")
elif shape == 2:
    print("I can draw that")
elif shape == 3:
    print("I can draw that")
else:
    print("I cant draw that")
if shape == 1:
 for i in range(0,4):
     forward(100)
     right(90)
if shape == 2:
    for z in range(0,3):
        forward(100)
        left(120)
if shape == 3:
    speed(0)
    for t in range(0,1):
     circle(50)
